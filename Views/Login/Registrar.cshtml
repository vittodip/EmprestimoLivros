@using EmprestimoLivros.Dto
@model UsuarioRegisterDto

@{
    ViewData["title"] = "Registrar";
    Layout = "_LayoutDeslogada";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success text-light" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger text-light" role="alert">
        @TempData["MensagemErro"]
    </div>
}

<div asp-validation-summary="All" class="text-danger"></div>

<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Cadastro de Usúarios</h1>
    </div>

    <form method="post" asp-controller="Login" asp-action="Registrar">

        <div class="mb-3">
            <label for="email" class="form-label text-light">Email:</label>
            <input type="email" class="form-control text-light" id="email" asp-for="Email" placeholder="Informe seu E-mail!">
        </div>

        <div class="mb-3">
            <label for="nome" class="form-label text-light">Nome:</label>
            <input type="text" class="form-control text-light" id="nome" asp-for="Nome" placeholder="Informe seu Nome!">
        </div>

        <div class="mb-3">
            <label for="sobrenome" class="form-label text-light">Sobrenome:</label>
            <input type="text" class="form-control text-light" id="sobrenome" asp-for="Sobrenome" placeholder="Informe seu Sobrenome!">
        </div>

        <div class="mb-3">
            <label for="senha" class="form-label text-light">Senha:</label>
            <input type="password" class="form-control text-light" id="senha" asp-for="Senha" placeholder="Informe sua senha!">
        </div>

        <div class="mb-3">
            <label for="senha" class="form-label text-light">Confirma Senha:</label>
            <input type="password" class="form-control text-light" id="senha" asp-for="ConfirmaSenha" placeholder="Informe sua senha!">
        </div>

        <div class="d-flex justify-content-center gap-5 mt-5">
            <button type="submit" class="btn btn-primary w-50 mx-2">Cadastrar-se</button>
            <a class="btn btn-light w-50" asp-controller="Login" asp-action="Login">Voltar</a>
        </div>

    </form>
</div>